<div class="container mx-auto">
  <div class="flex justify-center items-center min-h-screen">
    <div class="w-full max-w-md bg-blue-100 p-8 border border-blue-300 rounded-md text-blue-900">
      <h2 class="text-center text-2xl font-bold mb-4">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-3" }) do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-600 text-sm font-medium" %>
          <%= f.email_field :email, class: "form-input w-full", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-600 text-sm font-medium" %>
          <%= f.password_field :password, class: "form-input w-full", autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="mb-4 flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <%= f.label :remember_me, class: "ml-2 text-gray-600 text-sm" %>
          </div>
        <% end %>
        <div class="text-center my-2">
          <%= f.submit "Log in", class: "btn btn-primary bg-blue-500 hover:bg-blue-600 text-white" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
